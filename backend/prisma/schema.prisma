
generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SavedArticle {
  id            Int      @id @default(autoincrement())
  title         String
  url           String
  summary       String
  sentiment     Json
  namedEntities Json
  topWords      Json
  note          String?   // Campo opcional para anotaciones del usuario
  createdAt     DateTime  @default(now())
}